{
    "builders": [{
      "type": "openstack",
      "image_name": "k8s-1.16-yourname-lax1",
      "identity_endpoint": "https://cloud.lax1.imhcloud.net:5000/v3",
      "source_image": "87a2514c-6a37-4c97-bb32-86693ce4c9f7",
      "ssh_username": "ubuntu", 
      "region": "lax1",
      "reuse_ips": true,
      "flavor": "m1.small",
      "image_visibility": "private",
      "networks": ["4260cf69-4298-4162-bac3-e9ac42b75d18"]
    }],
    "provisioners": [
    {
        "type": "file",
        "source": "cloud-config",
        "destination": "/home/ubuntu/cloud-config"
    },
    {
        "type": "file",
        "source": "kubelet-extra-args.env",
        "destination": "/home/ubuntu/kubelet-extra-args.env"
    },
    {
        "type": "file",
        "source": "kubeadm-config.yaml",
        "destination": "/home/ubuntu/kubeadm-config.yaml"
    },
    {
        "type": "shell",
        "script": "./init.sh"
    }
  ]
}